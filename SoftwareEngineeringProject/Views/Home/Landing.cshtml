@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Hero -->
    <div class="p-5 text-center bg-image" style="
        background-image: url('../images/background-journal.jpg');
        background-size:cover;
        width: 100%;
        height: 400px;
        position: relative ;">
        <div class="mask" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)); position: absolute; top: 0; right: 0; bottom: 0; left: 0; ">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white">
                    <img class="d-block mx-auto mb-4" src="\images\logo.png" alt="" width="144" height="114">
                    <h1 class="mb-3">NoteApp</h1>
                    <h4 class="mb-3"></h4>
                <a class="btn btn-outline-light btn-lg " style="box-shadow: none; role="button" asp-area="" asp-controller="Home" asp-action="Signup">Create an account</a>
                </div>
            </div>
    </div>
    
    </div>
   <!-- Three columns -->
    <div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col-lg-4">
            <div class="text-center">
                <svg class="rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Icon" viewBox="20 15 100 100" preserveAspectRatio="xMidYMid meet" focusable="false">
                    <title>Image</title>
                    <image width="140%" height="140%" xlink:href="/images/icon-pencils.png" />
                </svg>
                <h2>Heading</h2>
                <p> This is the first column.</p>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="text-center">
                <svg class="rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Icon" viewBox="-20 -20 100 100" preserveAspectRatio="xMidYMid meet" focusable="false">
                    <title>Image</title>
                    <image width="70%" height="70%" xlink:href="/images/icon-notebook.png" />
                </svg>
                <h2>Heading</h2>
                <p> This is the second column.</p>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="text-center">
                <svg class="rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Icon" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid meet" focusable="false">
                    <title>Image</title>
                    <image width="100%" height="100%" xlink:href="/images/icon-team.png" />
                </svg>
                <h2>Heading</h2>
                <p> This is the third column.</p>
            </div>
        </div>
    </div>
 </div>

